<!doctype html>
<%= render 'html_tag' %>
<%= render 'head' %>
<body id='<%= @body_id %>'>
<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

<div id="wrapper-wide-body">
	<header class="container-fluid">
		<div class='row-fluid'>

			<%= render 'site_title' %>
			<h4 id="site-subtitle" class="hide-on-mobile"><%= site.subtitle.html_safe if site.subtitle.present? %></h4>
			<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
			<a class="btn btn-navbar" data-toggle="collapse" data-target="#langs-menu-container">
				<span><%= t("locales.long.#{I18n.locale.to_s}") %><i class="icon-chevron-down icon-white"></i></span>
	        </a>
			<!-- Everything you want hidden at 980px or less, place within here -->
			<div id="langs-menu-container" class="nav-collapse collapse pull-right">
				<%= render 'locales_select' %>
			</div>
		</div>
	</header>
	<div id="main-container" class='container-fluid'>
		<div class='row-fluid'>
			<div class="span12">
			<%= render_slideshow_for(site.home) %>
			</div>
	  	</div>
		<div class='row-fluid'>
			<div class="span3">
				<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
				<a class="btn btn-navbar" data-toggle="collapse" data-target="#primary-menu">
					<span><%= t(:navigation_menu) %><i class="icon-chevron-down icon-white"></i></span>
		        </a>
					<nav id="primary-menu" class="primary-menu-container nav-collapse collapse">
						<%= render_primary_menu %>
					</nav>
				<img src='/assets/leading-hotel-logo.jpg' class="hide-on-mobile">
			</div>
			<div class='span9 main-content'>
				<%= render "flash" %>
				<%= yield %>
			</div>
		</div>
  	</div>
	  <%= render 'footer' %>
	</div>
	<%= render 'javascripts' %>
</body>
</html>