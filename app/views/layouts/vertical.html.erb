<!doctype html>
<%= render '/shared/html_tag' %>
<head>
  <meta charset="utf-8"/>
  <title><%= @meta_title || site.title %></title>
  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="description" content="<%= @meta_description %>"/>
  <meta name="keywords" content="<%= @meta_keywords %>"/>
  <%= render 'shared/head' %>
  <%= yield :head %>
</head>


<body id='<%= @body_id %>' class='mobile'>
<!--[if lt IE 7]><p class=chromeframe>Your brow-fluidser is <em>ancient!</em> <a href="http://brow-fluidsehappy.com/">Upgrade to a different brow-fluidser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
<div class="wrapper">
	<header class="container-fluid">
		<div class='row-fluid'>

			<%= render 'shared/site_title' %>
			<h4 id="site-subtitle" class="hide-on-mobile"><%= site.subtitle.html_safe if site.subtitle.present? %></h4>
			<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
			<a class="btn btn-navbar" data-toggle="collapse" data-target="#langs-menu-container">
				<span><%= t("locales.long.#{I18n.locale.to_s}") %><i class="icon-chevron-down icon-white"></i></span>
	        </a>
			<!-- Everything you want hidden at 980px or less, place within here -->
			<div id="langs-menu-container" class="nav-collapse collapse pull-right">
				<%= render 'shared/locales_select' %>
			</div>
		</div>
	</header>
	<div id="main-container" class='container-fluid'>
		<div class='row-fluid'>
			<div class="span12">
			<%= render "images/shared/galleria", :images => site.sections.named("main").first.images %>
			</div>
	  	</div>
		<div class='row-fluid'>
			<div class="span3">
				<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
				<a class="btn btn-navbar" data-toggle="collapse" data-target="#primary-menu">
					<span><%= t(:navigation_menu) %><i class="icon-chevron-down icon-white"></i></span>
		        </a>
					<nav id="primary-menu" class="primary-menu-container nav-collapse collapse">
						<%= render 'shared/menu', :sections => site.sections.named("main").first.children.in_menu %>
					</nav>
				<img src='/assets/leading-hotel-logo.jpg' class="hide-on-mobile">
			</div>
			<div class='span9 main-content'>
				<%= render "shared/flash" %>
				<%= yield %>
			</div>
		</div>
  	</div>
	<%= render 'shared/footer' %>
	</div>
	<%= render 'shared/javascripts' %>
	<%= yield :after_javascript_libraries %>
<body>
</html>